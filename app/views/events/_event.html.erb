<div class="col-md-4 col-xs-12">
  <div class="event-name">
    <%= event.name %>
  </div>
    <div class="event-date">
    <%= format_date(event.date) %>
  </div>
  <div class="event-image">
    <%= image_tag event.image.url(:medium) %>
  </div>
  <div class="event-description">
    <%= event.description %>
  </div>
  <div class="btn-group">
     <%= link_to 'Show', event, class: "btn btn-default btn-xs" %>
     <%= link_to 'Edit', edit_event_path(event), class: "btn btn-default btn-xs" %>
     <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-default btn-xs" %>
  </div>
</div>

